  "dependencies": {
    "@octokit/rest": "^14.0.5",
    "@serverless/utils": "0.0.1",
    "analytics-node": "^3.2.0",
    "archiver": "^2.1.1",
    "aws-sdk": "^2.214.1",
    "axios": "^0.17.1",
    "bluebird": "^3.5.1",
    "chalk": "^2.3.2",
    "concordance": "^3.0.0",
    "crypto-extra": "^0.4.0",
    "download": "^6.2.5",
    "fs-extra": "^5.0.0",
    "graphlib": "^2.1.5",
    "js-yaml": "^3.10.0",
    "mime-types": "^2.1.18",
    "minimist": "^1.2.0",
    "node-fetch": "^2.1.1",
    "node-where": "^1.1.0",
